#!/bin/sh
# Pre-commit hook for quick linting and formatting
# Fast validation on staged files only - full build happens in pre-push
# This ensures fast commits while maintaining code quality

echo "ğŸ” Running pre-commit checks (quick validation on staged files)..."

# Run lint-staged (runs eslint --fix and prettier --write on staged files only)
# This is fast and only processes files you're committing
# Full build validation happens in pre-push hook
npx lint-staged || {
  echo ""
  echo "âŒ Linting/formatting failed on staged files!"
  echo "ğŸ’¡ Fix the errors above and try committing again"
  echo "ğŸ’¡ Full build validation will run before pushing (pre-push hook)"
  exit 1
}

echo "âœ… Pre-commit checks passed! (Fast validation completed)"
echo "â„¹ï¸  Full build validation will run before pushing"

