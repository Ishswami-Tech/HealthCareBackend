# Set default behavior to automatically normalize line endings.
* text=auto

# Force shell scripts to always use LF line endings
*.sh text eol=lf
*.bash text eol=lf

# Keep binary files unchanged
*.jpg binary
*.png binary
*.gif binary

# Prisma generated files - mark as generated for Git merge strategy
src/libs/infrastructure/database/prisma/generated/** linguist-generated=true
src/libs/infrastructure/database/prisma/generated/** -diff
src/libs/infrastructure/database/prisma/generated/** merge=ours 