apiVersion: v1
kind: Secret
metadata:
  name: wal-g-secrets
  namespace: healthcare-backend
type: Opaque
stringData:
  # Example for S3-compatible object storage (Contabo/Wasabi/B2)
  WALG_S3_PREFIX: s3://your-bucket/healthcare/postgres
  AWS_ACCESS_KEY_ID: YOUR_ACCESS_KEY
  AWS_SECRET_ACCESS_KEY: YOUR_SECRET_KEY
  AWS_REGION: us-east-1
  WALG_S3_ENDPOINT: https://YOUR_S3_ENDPOINT
  WALG_S3_FORCE_PATH_STYLE: "true"

