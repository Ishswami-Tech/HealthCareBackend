# Optimized Development Dockerfile
# Uses Alpine for smaller image size + Yarn Classic (no symlink issues)
FROM node:20-alpine AS development

LABEL app.component=backend
LABEL app.stage=development

# Install Yarn Classic and dependencies in one layer
RUN npm install -g yarn@1.22.22 --force 2>/dev/null || yarn --version && \
    apk add --no-cache \
    postgresql-client \
    redis \
    busybox-extras \
    python3 \
    make \
    g++ \
    wget \
    curl

WORKDIR /app

# Copy package files first for better caching
COPY package.json yarn.lock ./

# Install all dependencies
RUN yarn install --frozen-lockfile --ignore-scripts --network-timeout 100000

# Copy source files
COPY . .

# Verify config files and generate Prisma client
RUN test -f .swcrc && test -f nest-cli.json || (echo "[ERROR] SWC config files missing!" && exit 1) && \
    yarn prisma:generate && \
    mkdir -p /app/node_modules/.prisma/client && \
    cp -r /app/src/libs/infrastructure/database/prisma/generated/client/* /app/node_modules/.prisma/client/ 2>/dev/null || true

ENV NODE_ENV=development \
    PRISMA_SCHEMA_PATH=/app/src/libs/infrastructure/database/prisma/schema.prisma

EXPOSE 8088 5555

CMD ["yarn", "start:dev"]
