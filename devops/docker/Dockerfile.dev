# Optimized Development Dockerfile
# Uses Alpine for smaller image size + Yarn Classic (no symlink issues)
FROM node:20-alpine AS development

LABEL app.component=backend
LABEL app.stage=development

# Install Yarn Classic and dependencies in one layer
RUN npm install -g yarn@1.22.22 --force 2>/dev/null || yarn --version && \
    apk add --no-cache \
    postgresql-client \
    redis \
    busybox-extras \
    python3 \
    make \
    g++ \
    wget \
    curl

WORKDIR /app

# Copy package files first for better caching
COPY package.json yarn.lock ./

# Install all dependencies
RUN yarn install --frozen-lockfile --ignore-scripts --network-timeout 100000

# Copy source files
COPY . .

# Verify config files and generate Prisma client
# Prisma Client is generated to src/libs/infrastructure/database/prisma/generated (app-local directory)
RUN test -f .swcrc && test -f nest-cli.json || (echo "[ERROR] SWC config files missing!" && exit 1) && \
    yarn prisma:generate && \
    if [ ! -d /app/src/libs/infrastructure/database/prisma/generated ]; then \
    echo "[ERROR] Prisma Client generation failed - src/libs/infrastructure/database/prisma/generated not found!" && exit 1; \
    fi && \
    echo "[OK] Prisma Client generated successfully to src/libs/infrastructure/database/prisma/generated" && \
    # Create symlink for TypeScript resolution
    mkdir -p /app/node_modules/@prisma && \
    ln -sf /app/src/libs/infrastructure/database/prisma/generated /app/node_modules/@prisma/client

ENV NODE_ENV=development \
    PRISMA_SCHEMA_PATH=/app/src/libs/infrastructure/database/prisma/schema.prisma

EXPOSE 8088 5555

CMD ["yarn", "start:dev"]
