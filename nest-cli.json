{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "swcOptions": {
      "configFile": ".swcrc"
    },
    "assets": [
      {
        "include": "views/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true,
    "watchMode": true,
    "tsConfigPath": "tsconfig.json"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/prisma/generated/**",
    "src/libs/infrastructure/database/prisma/generated/**"
  ]
}
