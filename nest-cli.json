{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "views/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true,
    "watchMode": true,
    "tsConfigPath": "tsconfig.json"
  }
}
