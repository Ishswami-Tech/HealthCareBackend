{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "swcOptions": {
      "configFile": ".swcrc"
    },
    "assets": [
      {
        "include": "views/**/*",
        "outDir": "dist/src"
      },
      {
        "include": "src/generated/prisma/**/*",
        "outDir": "dist/generated/prisma"
      }
    ],
    "watchAssets": true,
    "watchMode": true,
    "tsConfigPath": "tsconfig.json"
  },
  "exclude": ["node_modules", "dist"]
}
