{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@database/*": ["src/libs/infrastructure/database/*"],
      "@infrastructure/*": ["src/libs/infrastructure/*"],
      "@services/*": ["src/services/*"],
      "@dtos/*": ["src/libs/dtos/*"],
      "@dtos": ["src/libs/dtos"],
      "@core/*": ["src/libs/core/*"],
      "@utils/*": ["src/libs/utils/*"],
      "@communication/*": ["src/libs/communication/*"],
      "@types/*": ["src/libs/core/types/*"],
      "@logging/*": ["src/libs/infrastructure/logging/*"],
      "@cache/*": ["src/libs/infrastructure/cache/*"],
      "@events/*": ["src/libs/infrastructure/events/*"],
      "@queue/*": ["src/libs/infrastructure/queue/*"],
      "@security/*": ["src/libs/security/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "prisma.config.js",
    "**/generated/**",
    "src/libs/infrastructure/database/generated"
    // Note: src/libs/infrastructure/database/prisma/generated is NOT excluded
    // to allow TypeScript to resolve types from Prisma Client
  ]
}
