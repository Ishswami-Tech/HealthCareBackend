# Staging Environment Configuration
NODE_ENV=staging
PORT=8088
HOST=0.0.0.0

# Database Configuration (Staging)
DATABASE_URL=postgresql://postgres:staging_password@postgres:5432/userdb?schema=public&connection_limit=30&pool_timeout=60&statement_timeout=60000&idle_in_transaction_session_timeout=60000&connect_timeout=60&pool_size=15&max_connections=30
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_password
POSTGRES_DB=userdb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration (Staging)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password

# JWT Configuration (Staging)
JWT_SECRET=staging-jwt-secret-key-min-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth (Staging)
GOOGLE_CLIENT_ID=staging-google-client-id
GOOGLE_CLIENT_SECRET=staging-google-client-secret

# Application Configuration (Staging)
CORS_ORIGIN=https://staging.ishswami.in
FRONTEND_URL=https://staging.ishswami.in
API_URL=https://staging-api.ishswami.in
BASE_URL=https://staging-api.ishswami.in
MAIN_DOMAIN=staging.ishswami.in
API_DOMAIN=staging-api.ishswami.in
FRONTEND_DOMAIN=staging.ishswami.in

# Logging (Staging)
LOG_LEVEL=info
ENABLE_DEBUG=true
ENABLE_HOT_RELOAD=false

# Database Pool (Staging)
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=60000
DB_MAX_RETRIES=3
DB_ENABLE_METRICS=true
DB_ENABLE_CIRCUIT_BREAKER=true

# Rate Limiting (Staging)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
SECURITY_RATE_LIMIT=true
SECURITY_RATE_LIMIT_MAX=500
SECURITY_RATE_LIMIT_WINDOW_MS=150

# Features (Staging)
ENABLE_CACHE=true
ENABLE_HEALTH_CHECK=true
ENABLE_METRICS=true
ENABLE_SWAGGER=true
ENABLE_LOGGER_DASHBOARD=true
ENABLE_AUDIT_LOGS=true

# Security (Staging)
TRUST_PROXY=1
SECURITY_HEADERS=true
ENCRYPTION_ENABLED=true
COMPLIANCE_LEVEL=HIPAA

# File Upload (Staging)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Timezone
TZ=UTC

# Staging Specific
DEV_MODE=false
IS_DEV=false
HOT_RELOAD=false

# Healthcare Configuration (Staging)
HEALTHCARE_ENABLE_AUDIT_LOGGING=true
HEALTHCARE_ENABLE_PHI_PROTECTION=true
HEALTHCARE_AUDIT_RETENTION_DAYS=90
HEALTHCARE_ENCRYPTION_ENABLED=true
HEALTHCARE_COMPLIANCE_LEVEL=HIPAA

# Performance (Staging)
NODE_OPTIONS=--max-old-space-size=1024 --max-http-header-size=16384 --expose-gc
ENABLE_GC=true
GC_INTERVAL=21600

# SSL/TLS
SSL_ENABLED=true
SSL_REDIRECT=true
